        {% endfor %} #}

	</section>

	<style>

		.viewAllUser {
			border-collapse: collapse;
		}

		th {
			width: 30%;
		}

		td {
			text-align: center;
			padding: 5px;
		}

        .viewAllUser,
        th,
        td{
            border: 1px solid;
        }

	</style>

{% endblock %}
