{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur
{% endblock %}

{% block body %}

	<section class="GlobalHeader">
		<div class="GlobalHeaderTitle">
			<h1>Page Admin</h1>
		</div>
	</section>

	<section class="GlobalMain">
		<section class="GlobalMainTitle">
			<h2>Liste de tout les utilisateur qui ce sont incrit :</h2>
		</section>


		<table class="viewAllUser">

			<tr>
				<th>Pr√©nom</th>
				<th>Nom</th>
				<th>Email</th>
				<th>Role</th>
                <th>Admin</th>
			</tr>
			{% for user in users %}
				<tr>
					<td>{{user.prenom}}</td>
					<td>{{user.nom}}</td>
					<td>{{user.email}}</td>
