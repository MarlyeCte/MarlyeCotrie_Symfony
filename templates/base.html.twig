<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}


		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
			<link rel="stylesheet" href="{{ asset('css/globalstyle.css') }}">
			<link rel="stylesheet" href="{{ asset('css/home.css') }}">

			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}

			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		<header class="HeaderContainer">
			<nav class="navbar-fixed-top">

				<a class="navItemTop" href="{{path('home')}}">Accueil</a>

				{% if is_granted('ROLE_ADMIN') %}
					<a class="navItemTop" href="{{path('adminzone')}}">Admin</a>
				{% endif %}

				{% if not app.user %}
					<a class="navItemTop Login" href="{{path('login')}}">Connexion</a>
					<a class="navItemTop Register" href="{{path('register')}}">Inscription</a>
				{% endif %}


				{% if app.user %}
					<a class="navItemTop" href="{{path('ux')}}">UX</a>
					<a class="navItemTop" href="{{path('profil')}}">Profil</a>
				{% endif %}

				<a class="navItemTop" href="{{path('contact')}}">Contact</a>
				{% if app.user %}
					<a class="navItemTop logout" href="{{path('logout')}}">Déconnexion</a>
				{% endif %}

			</nav>
		</header>


		{% block body %}{% endblock %}

		<footer class="FooterContainer">

			<div class="navbarfooter">
				<h3 class="navbarTitle">Plan du site</h3>
				<nav class="navbarBottom">
					<a class="navItemBottom" href="{{path('home')}}">Accueil</a>


					{% if is_granted('ROLE_ADMIN') %}
						<a class="navItemBottom" href="{{path('adminzone')}}">Admin</a>
					{% endif %}

					{% if not app.user %}
						<a class="navItemBottom Login" href="{{path('login')}}">Connexion</a>
						<a class="navItemBottom Register" href="{{path('register')}}">Inscription</a>
					{% endif %}

					{% if app.user %}
						<a class="navItemBottom" href="{{path('ux')}}">User</a>
						<a class="navItemBottom" href="{{path('profil')}}">Profil</a>
					{% endif %}

					<a class="navItemBottom" href="{{path('contact')}}">Contact</a>

					{% if app.user %}
						<a class="navItemBottom logout" href="{{path('logout')}}">Déconnexion</a>
					{% endif %}

				</nav>
			</div>
			<div class="navbarfooter">
				<h3 class="navbarTitle">Mes réseaux sociaux</h3>
				<nav class="navbarBottom">
					<a class="navItemBottom" href="https://www.linkedin.com/in/cotrie-marlye/" target="_blank" rel="noopener noreferrer">
						<i class="fa-brands fa-linkedin"></i>
						LinkedIn</a>

					<a class="navItemBottom" href="https://github.com/MarlyeCte" target="_blank" rel="noopener noreferrer">
						<i class="fa-brands fa-github-square"></i>
						GitHub</a>
				</nav>
			</div>
		</footer>
	</body>
</html>

<style>

	.HeaderContainer {
		display: flex;
		justify-content: center;
		background-color: rgb(255, 255, 255);
		width: 100%;
		position: fixed;
		z-index: 3;
	}

	.navbar-fixed-top {
		top: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
		margin: 0 auto;
	}

	.navItemTop {
		font-weight: 700;
		font-size: 20px;
		padding: 15px;
		text-align: center;
		color: rgb(0 0 0 / 76%);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.navItemTop:hover {
		color: rgb(255, 255, 255);
		background-color: rgb(0 0 0 / 50%);
		border-radius: 10px;
	}


	.FooterContainer {
		display: flex;
		justify-content: center;
		gap: 100px;
		background-color: rgb(0 0 0 / 60%);
		padding: 30px;
		color: white;
	}

	.navbarBottom {
		display: flex;
		flex-direction: column;
		justify-content: start;
	}

	.navbarTitle {
		font-size: 14px;
		font-weight: 900;
		margin-bottom: 10px;
		text-shadow: 4px 4px 10px black;
	}

	.navItemBottom {
		color: white;
		font-size: 14px;
		padding: 3px 3px 3px 0;
		text-align: start;
		text-decoration: none;
		text-shadow: 4px 4px 10px black;
	}

	.LogoFooter {
		width: 100px;
	}

	.navItemBottom:hover {
		text-decoration: underline;
	}


	.containerForm {
		display: flex;
		flex-direction: column;
		text-align: center;
		align-items: center;
		gap: 20px;
	}

	.containerInputAll {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 10px;
		width: 100%;
	}

	.containerInputAll label {
		font-size: 20px;
		font-weight: bold;
	}

	.inputStyle {
		display: flex;
		justify-content: center;
	}

	.inputStyle input {
		width: 70%;
		height: 20px;
		font-size: 18px;
		text-align: center;
		color: rgb(0 0 0 / 76%);
		border: 2px solid rgb(0 0 0 / 76%);
	}


	.btn {
		width: 100px;
		height: 30px;
		transition: all 0.3s ease;
		border: 2px solid rgb(0 0 0 / 76%);
	}

	.btn:hover {
		color: rgb(255, 255, 255);
		background-color: rgb(0 0 0 / 76%);
		border-radius: 10px;
	}

	.GlobalHeader {
		padding: 200px 100px;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: rgb(0 0 0 / 50%);
	}

	.GlobalHeaderTitle {
		border: 1px solid #fff;
		border-radius: 10px;
		background-color: #fff;
		padding: 30px;
		width: 50%;
		opacity: 0.7;
	}

	.GlobalHeaderTitle {
		color: black;
		text-shadow: 4px 4px 10px white;
		text-align: center;
		text-transform: uppercase;
		font-size: 25px;
		background: -webkit-linear-gradient(white, #333);
	}

	.GlobalMain {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		margin: 100px 80px;
	}

	.GlobalMainTitle {
		margin-bottom: 60px;
	}

	.GlobalMainTitle h2 {
		font-size: 24px;
		/* color: white; */
		/* text-transform: uppercase; */
		color: rgb(0 0 0 / 60%);
		text-shadow: 3px 3px 5px #9d9d9d;
		text-align: center;
		margin: 10px 0;
	}
</style>

